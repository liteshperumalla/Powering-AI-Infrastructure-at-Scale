# Environment variables for Infra Mind
# Copy this file to .env and update with your actual values

# Application Configuration
INFRA_MIND_ENVIRONMENT=development
INFRA_MIND_DEBUG=true
INFRA_MIND_SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
INFRA_MIND_MONGODB_URL=mongodb://localhost:27017
INFRA_MIND_MONGODB_DATABASE=infra_mind
INFRA_MIND_REDIS_URL=redis://localhost:6379

# LLM Configuration
INFRA_MIND_OPENAI_API_KEY=your-openai-api-key-here
INFRA_MIND_LLM_MODEL=gpt-4
INFRA_MIND_LLM_TEMPERATURE=0.1

# Azure OpenAI Configuration (for Smart Suggestions)
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo

# AWS Configuration
INFRA_MIND_AWS_ACCESS_KEY_ID=your-aws-access-key
INFRA_MIND_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
INFRA_MIND_AWS_REGION=us-east-1

# Azure Configuration
INFRA_MIND_AZURE_CLIENT_ID=your-azure-client-id
INFRA_MIND_AZURE_CLIENT_SECRET=your-azure-client-secret
INFRA_MIND_AZURE_TENANT_ID=your-azure-tenant-id

# GCP Configuration
INFRA_MIND_GCP_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
INFRA_MIND_GCP_PROJECT_ID=your-gcp-project-id

# IBM Cloud Configuration
INFRA_MIND_IBM_API_KEY=your-ibm-api-key
INFRA_MIND_IBM_ACCOUNT_ID=your-ibm-account-id
INFRA_MIND_IBM_REGION=us-south

# Alibaba Cloud Configuration
INFRA_MIND_ALIBABA_ACCESS_KEY_ID=your-alibaba-access-key-id
INFRA_MIND_ALIBABA_ACCESS_KEY_SECRET=your-alibaba-access-key-secret
INFRA_MIND_ALIBABA_REGION=cn-beijing

# API Configuration
INFRA_MIND_API_HOST=0.0.0.0
INFRA_MIND_API_PORT=8000
INFRA_MIND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Apple Sign-In Configuration (for future implementation)
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/apple-private-key.p8

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Rate Limiting
INFRA_MIND_RATE_LIMIT_REQUESTS=100

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-gmail-address@gmail.com
SMTP_PASSWORD=your-gmail-app-password-16-chars
FROM_EMAIL=your-gmail-address@gmail.com
FROM_NAME=Infra Mind
FRONTEND_URL=http://localhost:3000