# Production Environment Variables for Demo
# Based on .env.production but with demo-safe values

# Application Configuration
INFRA_MIND_ENVIRONMENT=production
INFRA_MIND_DEBUG=false
INFRA_MIND_APP_NAME="Infra Mind"
INFRA_MIND_APP_VERSION="1.0.0"

# Security Configuration
INFRA_MIND_SECRET_KEY=demo-production-secret-key-32-chars-long
JWT_SECRET_KEY=demo-jwt-secret-key-for-production-demo
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENCRYPTION_KEY=demo-encryption-key-32-chars-long

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure-mongo-password-123
REDIS_PASSWORD=secure-redis-password-123

# LLM Configuration
OPENAI_API_KEY=demo-openai-key-placeholder
ANTHROPIC_API_KEY=demo-anthropic-key-placeholder
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Cloud Provider Configuration
AWS_ACCESS_KEY_ID=demo-aws-access-key
AWS_SECRET_ACCESS_KEY=demo-aws-secret-key
AWS_REGION=us-east-1
AZURE_CLIENT_ID=demo-azure-client-id
AZURE_CLIENT_SECRET=demo-azure-client-secret
AZURE_TENANT_ID=demo-azure-tenant-id
GCP_SERVICE_ACCOUNT_PATH=/dev/null
GCP_PROJECT_ID=demo-gcp-project

# API Configuration
CORS_ORIGINS=["http://localhost:3000","https://localhost:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Performance
MAX_WORKERS=4
WORKER_CONNECTIONS=1000

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
SENTRY_DSN=

# Frontend Configuration
FRONTEND_API_URL=http://localhost:8000
FRONTEND_WS_URL=ws://localhost:8000

# Grafana
GRAFANA_ADMIN_PASSWORD=admin123

# Build Information
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=demo-production
VERSION=1.0.0

# Logging
LOG_LEVEL=info