# Development Environment Configuration for Infra Mind
# This file contains development-specific settings

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
INFRA_MIND_ENVIRONMENT=development
INFRA_MIND_DEBUG=true
INFRA_MIND_APP_NAME="Infra Mind Development"
INFRA_MIND_APP_VERSION="0.1.0-dev"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Development secret key (auto-generated for security)
INFRA_MIND_SECRET_KEY=dev-secret-key-for-development-only-not-for-production-use-32chars

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-for-development-only-change-in-production-64-chars-long
INFRA_MIND_ACCESS_TOKEN_EXPIRE_MINUTES=60
INFRA_MIND_REFRESH_TOKEN_EXPIRE_DAYS=30
INFRA_MIND_ALGORITHM=HS256

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development databases (local)
INFRA_MIND_MONGODB_URL=mongodb://admin:password@localhost:27017/infra_mind?authSource=admin
INFRA_MIND_MONGODB_DATABASE=infra_mind
INFRA_MIND_MONGODB_MAX_CONNECTIONS=20
INFRA_MIND_MONGODB_MIN_CONNECTIONS=5

INFRA_MIND_REDIS_URL=redis://localhost:6379/0
INFRA_MIND_REDIS_MAX_CONNECTIONS=10

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Development LLM settings (replace with actual keys for testing)
INFRA_MIND_OPENAI_API_KEY=sk-development-openai-key-replace-with-real-key-for-testing
INFRA_MIND_LLM_MODEL=gpt-3.5-turbo
INFRA_MIND_LLM_TEMPERATURE=0.1
INFRA_MIND_LLM_MAX_TOKENS=2000
INFRA_MIND_LLM_TIMEOUT=30

# Optional LLM providers for development
INFRA_MIND_ANTHROPIC_API_KEY=sk-ant-development-key-replace-with-real-key

# =============================================================================
# CLOUD PROVIDER CONFIGURATION (Development/Testing)
# =============================================================================
# AWS Development Configuration
INFRA_MIND_AWS_ACCESS_KEY_ID=AKIA_DEVELOPMENT_KEY_ID
INFRA_MIND_AWS_SECRET_ACCESS_KEY=development_aws_secret_access_key
INFRA_MIND_AWS_REGION=us-east-1

# Azure Development Configuration
INFRA_MIND_AZURE_CLIENT_ID=development-azure-client-id
INFRA_MIND_AZURE_CLIENT_SECRET=development-azure-client-secret
INFRA_MIND_AZURE_TENANT_ID=development-azure-tenant-id
INFRA_MIND_AZURE_SUBSCRIPTION_ID=development-azure-subscription-id

# GCP Development Configuration
INFRA_MIND_GCP_PROJECT_ID=infra-mind-development
INFRA_MIND_GCP_REGION=us-central1

# =============================================================================
# API CONFIGURATION
# =============================================================================
INFRA_MIND_API_HOST=127.0.0.1
INFRA_MIND_API_PORT=8000
INFRA_MIND_API_PREFIX=/api/v1

# CORS Configuration (permissive for development)
INFRA_MIND_CORS_ORIGINS='["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]'
INFRA_MIND_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
INFRA_MIND_RATE_LIMIT_REQUESTS=1000
INFRA_MIND_RATE_LIMIT_BURST=1500

# Cloud API Rate Limits (generous for development)
INFRA_MIND_AWS_RATE_LIMIT=200
INFRA_MIND_AZURE_RATE_LIMIT=500
INFRA_MIND_GCP_RATE_LIMIT=200

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
INFRA_MIND_CACHE_ENABLED=true
INFRA_MIND_CACHE_DEFAULT_TTL=1800
INFRA_MIND_CACHE_PRICING_TTL=3600

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
INFRA_MIND_LOG_LEVEL=DEBUG
INFRA_MIND_LOG_FORMAT=text
INFRA_MIND_LOG_FILE=

# Development monitoring (disabled)
INFRA_MIND_METRICS_ENABLED=false
INFRA_MIND_HEALTH_CHECK_INTERVAL=60

# =============================================================================
# SECURITY HEADERS AND FEATURES
# =============================================================================
INFRA_MIND_SECURITY_HEADERS_ENABLED=false
INFRA_MIND_HSTS_MAX_AGE=0

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
INFRA_MIND_MAX_FILE_SIZE=5242880
INFRA_MIND_ALLOWED_FILE_TYPES='[".json",".yaml",".yml",".txt",".csv",".py"]'

# =============================================================================
# EXTERNAL SERVICES (Development - Optional)
# =============================================================================
# Search APIs (for development testing)
INFRA_MIND_GOOGLE_SEARCH_API_KEY=development-google-search-key
INFRA_MIND_GOOGLE_SEARCH_ENGINE_ID=development-search-engine-id
INFRA_MIND_BING_SEARCH_API_KEY=development-bing-search-key

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
INFRA_MIND_WEBHOOK_SECRET=development-webhook-secret-for-testing
INFRA_MIND_WEBHOOK_TIMEOUT=15