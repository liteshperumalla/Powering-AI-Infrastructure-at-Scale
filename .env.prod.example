# Production Environment Variables for Infra Mind
# Copy this file to .env.prod and update with your actual production values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password
REDIS_PASSWORD=your-secure-redis-password

# Application Configuration
SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# LLM Configuration
OPENAI_API_KEY=your-production-openai-api-key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# GCP Configuration
GCP_SERVICE_ACCOUNT_PATH=/app/gcp-service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Frontend Configuration
FRONTEND_API_URL=https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=1000

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking